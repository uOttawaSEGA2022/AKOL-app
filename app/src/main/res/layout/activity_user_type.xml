<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserType">

    <Button
        android:id="@+id/ChefUser"
        android:layout_width="179dp"
        android:layout_height="58dp"
        android:layout_marginBottom="32dp"
        android:text="Chef"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/ClientUser"
        tools:layout_editor_absoluteX="116dp" />

    <Button
        android:id="@+id/ClientUser"
        android:layout_width="179dp"
        android:layout_height="58dp"
        android:layout_marginBottom="248dp"
        android:text="Client"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="116dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:text="AKOL"
        android:textSize="96sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="What type of user are you?"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ChefUser"
        tools:layout_editor_absoluteX="64dp" />
</androidx.constraintlayout.widget.ConstraintLayout>