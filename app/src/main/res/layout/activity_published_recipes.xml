<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublishedRecipes"
    android:id="@+id/pubLayout">
    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/blanka"
        android:text="AKOL"
        android:textSize="80dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:id="@+id/MoveToMyRecipesModifyBackLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp">


        <Button
            android:id="@+id/MoveToMyRecipesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="Move to my recipes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />

        <Button
            android:id="@+id/BackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="Back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />


    </LinearLayout>


    <TextView
        android:id="@+id/RecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/MoveToMyRecipesModifyBackLayout"
        app:layout_constraintTop_toBottomOf="@+id/MoveToMyRecipesModifyBackLayout"
        app:layout_constraintVertical_bias="0.098" />

    <TextView
        android:id="@+id/CuisineType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuisine type: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/MoveToMyRecipesModifyBackLayout"
        app:layout_constraintTop_toBottomOf="@+id/RecipeName"
        app:layout_constraintVertical_bias="0.124" />

    <TextView
        android:id="@+id/Ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/MoveToMyRecipesModifyBackLayout"
        app:layout_constraintTop_toBottomOf="@+id/CuisineType"
        app:layout_constraintVertical_bias="0.109" />

    <TextView
        android:id="@+id/MealType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal type: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/MoveToMyRecipesModifyBackLayout"
        app:layout_constraintTop_toBottomOf="@+id/Ingredients"
        app:layout_constraintVertical_bias="0.141" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/MoveToMyRecipesModifyBackLayout"
        app:layout_constraintTop_toBottomOf="@+id/MealType"
        app:layout_constraintVertical_bias="0.208" />

    <TextView
        android:id="@+id/Allergens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allergens: "
        app:layout_constraintStart_toStartOf="@+id/MoveToMyRecipesModifyBackLayout"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:id="@+id/Prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: "
        app:layout_constraintStart_toStartOf="@+id/MoveToMyRecipesModifyBackLayout"
        app:layout_constraintTop_toBottomOf="@+id/Allergens"
        app:layout_constraintBottom_toBottomOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>
