<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublishedRecipes">
    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/blanka"
        android:text="AKOL"
        android:textSize="80dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:id="@+id/MoveToMyRecipesModifyBackLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp">


        <Button
            android:id="@+id/MoveToMyRecipesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="Move to my recipes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />
        <Button
            android:id="@+id/ModifyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="Modify"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />
        <Button
            android:id="@+id/BackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="Back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/PublishedRecipesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/MoveToMyRecipesModifyBackLayout"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp">


        <EditText
            android:padding="10dp"
            android:id="@+id/PublishedRecipesField"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corners"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="                        Published recipes"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/RecipesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/PublishedRecipesLayout"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp">


        <EditText
            android:padding="10dp"
            android:id="@+id/RecipesField"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="400dp"
            android:background="@drawable/rounded_corners"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="                        Recipe A"

            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>